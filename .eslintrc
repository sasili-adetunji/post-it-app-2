 {
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line":2,
    "no-unused-vars":"warn",
    "max-len": [2, 80, 2],
    "react/jsx-uses-vars": 1
    },
  "globals": {
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
     }
   }
  }